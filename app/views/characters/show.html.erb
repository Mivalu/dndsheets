<p id="notice"><%= notice %></p>

<div class="character name">
  <strong>Name:</strong>
  <%= @character.name %>
</div>

<div class="character subhead">
  <%= @character.race %> <%= @character.job %>
</div>

<div class="character subhead">
  Level <%= @character.level %>
</div>
<div class="attribute">
<table class="table table-bordered">
  <tr>
    <th>Attr</th>
    <th>Score</th>
  </tr>
  <tr>
    <td>Init</td>
    <td><%= @character.init %></td>
  </tr>
  <tr>
    <td>AC</td>
    <td><%= @character.ac %></td>
  </tr>  
  <tr>
    <td>SPD</td>
    <td><%= @character.speed %></td>
  </tr> 
</table>
</div>
<br>
<p>
	<strong><%= @character.name %>'s Equipment</strong><br>
  <dl>
  <% @character.equips.each do |equip| %>
	 <dt><%= equip.name %></dt>
   <dd> 
    <% if equip.qty != nil %>Qty: <%= equip.qty %>
    <% else %>Qty: 1<% end %>
    | 
	 <%= equip.desc %></dd>
	<% end %>
  </dl>
</p>
<br>
<div class="links hideonprint">
<%= link_to 'Give Equipment', new_equip_path %><br />
<%= link_to 'Edit', edit_character_path(@character) %> |
<%= link_to 'Back', characters_path %>
</div>
